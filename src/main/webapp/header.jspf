	<div class="login_roundcorner login">
		<c:if test="${not loggedUser.logged}">
	      	<div style="display: none;" id="logform">
	            <form action="<c:url value='/login'/>" method="post">
	                <p>
	                    <label>Login&nbsp;: <input type="text" name="login" style="width: 125px; font-size: 12px;" maxlength="20" class="inputtxt"></label> 
	                    <label>Senha&nbsp;: <input type="password" name="password"  style="width: 125px; font-size: 12px;" maxlength="20" size="20" class="inputtxt"></label> 
	                    <a onclick="off('logform'); on('pwrecup'); return false;" href="#"><b>?</b></a>
	                    <input type="hidden" value="connx" name="cmd">
	                    <input type="submit" style="font-size: 11px;" value="&#187;" class="button"> | 
	                    <a href="<c:url value="/register"/>"><b>criar um usuário</b></a>
	                </p>
	            </form>
	        </div>
			<div style="display: none;" id="pwrecup">
	            <form action="<c:url value='/sendNewPass'/>" method="post">
	                <p>
	                    Esqueceu a senha?
	                    <label>Email&nbsp;: <input type="text" name="email" style="width: 125px; font-size: 12px;" maxlength="20" class="inputtxt"></label> 
	                    <input type="hidden" value="pwrecup" name="cmd">
	                    <input type="submit" style="font-size: 11px;" value="Enviar nova senha por e-mail" class="button">
	                    <a onclick="off('pwrecup'); on('logform'); return false" href="#">&#171;</a>
	                </p>
	            </form>
	        </div>
	        <div id="loginlink">
	            <p><a onclick="on('logform'); off('loginlink'); return false" href="#">conectar</a></p>
	        </div>
    	</c:if>
			<c:if test="${loggedUser.logged}">
				<p>Bem-vindo, <span>${loggedUser.user.name}</span>, ao CoGrOO Comunidade.<a href="<c:url value="/logout"/>">(logout)</logout></a></p>
			</c:if>
    </div>
	<div id="logoCogroo"><div id="logoBROffice"></div></div>
	<div>
		<ul id="menu" class="menu">
			<li><a href="<c:url value="/"/>">Bem-vindo</a></li>
			<li><a href="<c:url value="/"/>">Análise Gramatical</a></li>
			<li><span>Dicionário</span>
				<ul>

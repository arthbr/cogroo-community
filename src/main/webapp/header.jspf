	                    <a onclick="off('pwrecup'); on('logform'); return false" href="#"><b>voltar</b></a>
	                </p>
	            </form>
	        </div>
	        <div id="loginlink">
	            <p><a onclick="on('logform'); off('loginlink'); return false" href="#"><b>conectar-se</b></a></p>
	        </div>
    	</c:if>
